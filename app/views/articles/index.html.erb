<div class="mx-auto max-w-7xl px-6 lg:px-8">
  <div class="mx-auto relative isoloate flex flex-col justify-end overflow-hidden rounded-2xl px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
      <%= image_tag "https://cdn.discordapp.com/attachments/951197655021797436/1185339741311356938/orderedentropy__as_seen_in_blacklight_anaglyph_my_eye_has_eyes_93890f53-5439-4f80-8b0b-fd5e44b6e83a.png?ex=658f40a8&is=657ccba8&hm=819f95152f6fb3a2be215b75c3749a347e4e843a68dfed6ac7e46497648f98cb&", class: "absolute inset-0 -z-10 h-full w-full object-cover" %> 
      <div class="absolute inset-0 -z-10 bg-gradient-to-t from-neutral-950 via-neutral-950/40"></div>
      <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-neutral-950/10"></div>
      <h1 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        <span class="absolute inset-0"></span>
        From the community
      </h1>
      <p class="mt-2 text-lg leading-8 text-neutral-400">
        Check out the latest articles from our blog-on-rails community!
      </p>
  </div>
  <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <article class="flex flex-col items-start justify-between">
          <div class="max-w-xl">
            <h2 class="mt-3 text-lg font-semibold leading-6 text-neutral-950 group-hover:text-neutral-600">
              <%= link_to article.title, article %>
            </h2>
            <p class="mt-5 line-clamp-3 text-sm leading-6 text-neutral-600">
              <%= article.body %>
            </p>
          </div>
        </article>
      <% end %>
    <% end %>
  </div>

  <div class="mt-16">
    <%= link_to "Create a new article ->", new_article_path, class: "text-sm font-semibold leading-6 text-rose-600" %>
  </div>

</div>
