
<div class="max-w-3xl">
    <div>
        <h1 class="text-7xl font-bold">
            <%= @article.title %>
        </h1>
        <p class="text-2xl text-neutral-500 mt-2">
            <%= @article.body %>
        </p>
    </div>

    <div class="mt-8">
        <ul class="flex">
            <li class="mr-4">
                <%= link_to "Edit", edit_article_path(@article), class: "bg-indigo-500 rounded-xl p-2 text-xl text-white hover:text-neutral-600" %>
            </li>
            <li>
                <%= link_to "Destroy", article_path(@article), class: "bg-red-500 rounded-xl p-2 text-xl text-white hover:text-neutral-600", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                } %>
            </li>
        </ul>
    </div>

    <div class="mt-8">
        <h2 class="text-xl font-semibold">
            Comments
        </h2>
        <h3 class="text-md text-neutral-400">
            <%= @article.comments.count %> Comments
        </h3>
        <div class="mt-4">
            <p class="text-md text-neutral-400 mt-2">
                <%= render @article.comments %>
            </p>
        </div>
    </div>

    <div class="mt-10">
        <div class="w-1/2">
            <h2 class="text-xl font-semibold">
                Add a comment
            </h2>
            <div class="mt-4">
                <%= render "comments/form" %>
            </div>
        </div>
    </div>


    <div class="mt-10">
        <%= link_to "Back to Articles ->", articles_path, class: "text-lg text-neutral-950 font-semibold" %>
    </div>
</div>